grey = #282C34
grey-tab = #21252B
grey-text-tab = #6B717D
tab-active = #568AF2
white = #D7DAE0
white-codemirror = rgba(233, 237, 237, 1)
green-codemirror = rgb(83,127,126)
oracle = #f50

.helper
  background-color rgba(0,0,0,.66)
  z-index 255
  position absolute
  width 100%
  height 100%
  content " "
  transition-property opacity
  transition-duration 0.5s
  margin 0
  padding 0
  top 0
  left 0
  .container
    background-color rgba(200,200,200,.9)
    color #000
    top 50%
    left 50%
    width 600px
    height 300px
    padding 30px
    box-sizing border-box
    margin -150px 0 0 -300px
    position absolute
    border-radius 5px
    .title
      text-align center
    .text
      text-align justify
    .footer
      .circle
        display inline
        width 30px
        height 30px
        border-radius 30px
        margin 0 30px
        background-color #000
        content " "

.screen
  float left

.toolbox-space
  margin-left 60px

.font-size
  font-size 14px
  line-height 21px

.CodeMirror
  line-height 1.5
  pre
    line-height 1.5

body
  overflow-x hidden
  width 100%
  background-color grey
  color white
  margin 0
  padding 0
  @extend .font-size
  box-sizing border-box

#tabs
  width 100%
  background-color grey-tab
  display table
  ul
    list-style-type none
    margin 0
    padding 0 10px
    height 48px
    overflow hidden
    display table-cell
    vertical-align middle
    li
      position relative
      float left
      width 100px
      text-align center
      border-radius 3px 3px 0px 0px
      padding 11px 50px
      font-size 16px
      margin-top 6px
      line-height 20px
    .tab-hamburger
      margin 2px 0px
      width 24px
      padding 10px 20px 10px 10px
    .tab
      background-color grey-tab
      color grey-text-tab
    .tab-active
      border-left 3px solid tab-active
      background-color grey
      color white

.hidden-content
  display none

.show-content
  display block

.console
  padding 4px 0px

.var {
  display: inline;
}

.lines
  font-family monospace
  @extend .font-size
  white-space pre-wrap
  word-break normal
  word-wrap break-word
  cursor text
  padding 0px 4px 0px 0px
  input
    margin-left 8px
    background-color grey
    border 0px
    font-family monospace
    @extend .font-size
    white-space pre-wrap
    word-break normal
    word-wrap break-word
    cursor text
    outline 0px
    color white

.arrow
  color green-codemirror

.margin-line
  margin-left 24px
  float left

.CodeMirror
  height 100%

.hamburger
  width 24px
  height 24px
  overflow hidden
  content ""
  .line
    border-radius 2px
    width 24px
    height 5px
    margin 2px 0px
    content ""
    background-color grey-text-tab
    transition-property background-color
    transition-duration 0.2s
  .line_over
    border-radius 2px
    width 24px
    height 5px
    margin 2px 0px
    content ""
    background-color white
    transition-property background-color
    transition-duration 0.2s

.modal
  left 0
  top 0
  z-index 255
  overflow-x hidden
  position absolute
  width 100%
  height 100vh
  background-color white
  content " "
  .docs
    left 0
    color grey
    box-sizing border-box
    margin 10px 10px 10px 10px
    padding-left 64px
    padding-right 20px 
    width 100%
    height 100vh
    position absolute
    h1
      font-size 1.2em
      text-align center
    p
      text-align justify
    .setting
      padding .5em
      margin .2em
      color grey
  .ide
    top 0
    left 0
    z-index 256
    width 64px
    height 100%
    position fixed
    background-color grey
    content " "
    ul
      list-style-type none
      margin 0
      padding 0
      .tab-hamburger
        filter brightness(150%)
        margin 2px 0px
        width 24px
        padding 10px 20px
      .tab-console
        filter brightness(150%)
        margin 2px 0px
        width 28px
        padding 10px 18px

img:hover
  filter brightness(150%)
  transition-duration 0.2s

.show
  opacity 1

.hidden
  display none
